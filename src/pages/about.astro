---
import Main from "../layouts/Main.astro";
---

<Main isCenter title="About">
  <div class="flex flex-col justify-center items-center h-screen bg-blue-200">
    <h1
      class="text-4xl md:text-7xl font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-yellow-300 to-orange-600 drop-shadow-lg p-8"
    >
      Get Information About Me
    </h1>
    <span
      class="inline-block animate-bounce rounded-full p-4 bg-pink-400 text-white text-sm"
    >
      <svg
        class="w-6 h-6 mx-auto"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path>
      </svg>
    </span>

    <a class="text-pink-600 text-black text-2xl" href="https://porto.fenny.me/"
      ><button>Click Me !</button>
    </a>
  </div>
</Main>
